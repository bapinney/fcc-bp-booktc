h1 My Books
div(ng-controller="mybooks")
    div(id="status_text" ng-class="{status_text_error : error === true, status_text: error === false}" ng-show="!pollingCompleted || error") {{statusMessage}}
    div(id="book_grid")
        div(ng-repeat="book in books" class="book")
            img(ng-src="{{book.imgUrl}}")
    a(id="prev_button" ng-click="prevPage()" accesskey="<" ng-show="page > 1") 
        u <
        | Prev
    a(id="next_button" ng-click="nextPage()" accesskey=">" ng-show="page < pages && page != pages")
        | Next
        u >