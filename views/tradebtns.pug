div(id="trade_btns_div" ng-controller="TradeBtnsCtrl" ng-show="signedIn")
    button(id="myReqsBtn" ng-click="showMyTradeReqs()" type="button")
        span(class="fa fa-user")
        |&nbsp;My trade requests {{nMyReqs}}
    button(id="reqsForMeBtn" ng-click="showReqsForMe()" type="button") 
        span(class="fa fa-inbox")
        |&nbsp;Requests for me {{nReqsForMe}}
    div(id="tradeBtnsMenu" style="height:0px;")
        div(class="trade-item" ng-repeat="trade in trades") From {{trade.fromUser[0].userName}}: {{trade.book.title}}
            a(class="fa fa-check trade-check" ng-click="approveTrade($event, trade)" title="Approve Trade")
            a(class="fa fa-remove trade-remove" ng-click="declineTrade($event, trade)" title="Decline Trade")