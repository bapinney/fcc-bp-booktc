h1 All Books
div(ng-controller="allbooks")
    div(id="status_text" ng-class="{status_text_error : error === true, status_text: error === false}" ng-show="!pollingCompleted || error") {{statusMessage}}
    div(id="book_grid")
        div(ng-repeat="book in books" class="book")
            img(ng-src="{{book.imgUrl}}")
    a(id="prev_button" ng-click="prevPage()" ng-show="page > 1") Prev
    a(id="next_button" ng-click="nextPage()" ng-show="page < pages && page != pages") Next